<% content_for :controls do %>
	<ul>
		<%= control_link('Users', admin_users_path) %>
		<%= control_link('New User', new_admin_user_path) %>
	</ul>
<% end %>

<table cellspacing="0">
	<thead>
		<tr>
			<th>Email Address</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td>
				<%= user.email %>
			</td>
			<td>
				<%= link_to 'Edit', edit_admin_user_path(user) %>&nbsp;
				<%= link_to 'Delete', admin_user_path(user), :method => :delete, :confirm => 'Are you sure?' %>
			</td>
		</tr>
		<% end %>
	</tbod>
</table>